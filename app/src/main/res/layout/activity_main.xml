<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_school_student"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="UNIVERSITY OF HOGWARDS STUDENT INFORMATION"
        android:textAlignment="center"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="80dp"
        tools:layout_editor_absoluteY="55dp" />

    <EditText
        android:id="@+id/et_id_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_school_student"
        android:layout_marginTop="18dp"
        android:drawableLeft="@drawable/ic_baseline_account_box_24"
        android:hint="Id No:"
        android:inputType="number"
        android:minHeight="48dp"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/et_first_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_id_number"
        android:layout_marginTop="20dp"
        android:drawableLeft="@drawable/ic_baseline_person_24"
        android:hint="First Name:"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/et_last_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_first_name"
        android:layout_marginTop="20dp"
        android:drawableLeft="@drawable/ic_baseline_person_24"
        android:hint="Last Name:"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/et_contact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_last_name"
        android:layout_marginTop="20dp"
        android:drawableLeft="@drawable/ic_baseline_call_24"
        android:hint="Contact No:"
        android:inputType="number"
        android:minHeight="48dp"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/et_date_birth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_contact"
        android:layout_marginTop="20dp"
        android:drawableLeft="@drawable/ic_baseline_date_range_24"
        android:hint="Birth Date:"
        android:inputType="textShortMessage|number"
        android:minHeight="48dp"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btn_create"
        android:layout_width="153dp"
        android:layout_height="63dp"
        android:layout_below="@+id/et_date_birth"
        android:layout_marginTop="20dp"
        android:text="Create"
        tools:text="Create" />

    <Button
        android:id="@+id/btn_retrieve"
        android:layout_width="153dp"
        android:layout_height="63dp"
        android:layout_below="@+id/et_date_birth"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@+id/btn_create"
        android:text="Retrieve All"
        tools:text="Retrieve All" />

    <Button
        android:id="@+id/btn_update"
        android:layout_width="153dp"
        android:layout_height="63dp"
        android:layout_below="@+id/btn_create"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:text="Update"
        tools:text="Update" />

    <Button
        android:id="@+id/btn_delete"
        android:layout_width="153dp"
        android:layout_height="63dp"
        android:layout_below="@+id/btn_retrieve"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@+id/btn_update"
        android:text="Delete"
        tools:text="Delete" />

    <Button
        android:id="@+id/btn_retrieve_id"
        android:layout_width="153dp"
        android:layout_height="63dp"
        android:layout_below="@+id/btn_update"
        android:layout_marginTop="20dp"
        android:text="Retrieve" />

    <Button
        android:id="@+id/btn_clear_all"
        android:layout_width="153dp"
        android:layout_height="63dp"
        android:layout_below="@+id/btn_delete"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@+id/btn_retrieve_id"
        android:text="Clear All"
        tools:text="Clear All" />


</RelativeLayout>